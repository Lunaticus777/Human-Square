@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Human_Evolution</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        #langForm {
            position: fixed;
            top: 10px;
            right: 10px;
            z-index: 9999;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="/images/Human_Evolution_Logo.png?v=2" alt="Logo" height="110" class="me-2 nav-logo" />
                    <span class="fw-bold"></span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">@Localizer["Nav_Home"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">@Localizer["Nav_About"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Services" asp-action="Orientation">@Localizer["Nav_Services"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Contact" asp-action="Contact">@Localizer["Nav_Contact"]</a>
                        </li>
                        <li class="nav-item d-flex align-items-center">
                            <form method="post" asp-controller="Home" asp-action="SetLanguage" asp-route-returnUrl="@Context.Request.Path" class="d-flex">
                                <button type="submit" name="culture" value="fr"
                                        class="btn btn-sm btn-outline-light me-1 @(System.Globalization.CultureInfo.CurrentUICulture.Name.StartsWith("fr") ? "active" : "")"
                                        title="Français">
                                    🇫🇷
                                </button>
                                <button type="submit" name="culture" value="pt"
                                        class="btn btn-sm btn-outline-light @(System.Globalization.CultureInfo.CurrentUICulture.Name.StartsWith("pt") ? "active" : "")"
                                        title="Português">
                                    🇵🇹
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div style="height:70px;"></div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6 mb-3 mb-md-0">
                    <h5>Human Square</h5>
                    <p class="mb-0">@Localizer["Footer_Company"]</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="/Home/Privacy" class="text-light me-3">@Localizer["Footer_Legal"]</a>
                    <a asp-controller="Contact" asp-action="Contact" class="btn btn-outline-light btn-sm">@Localizer["Nav_Contact"]</a>
                </div>
            </div>
            <hr class="border-light my-3" />
            <p class="text-center mb-0">&copy; 2025 Human Square. @Localizer["Footer_Claim"]</p>
        </div>
    </footer>

    <p class="text-center text-danger fw-bold mt-4">
        🌍 Langue active : @System.Globalization.CultureInfo.CurrentUICulture.Name
    </p>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
